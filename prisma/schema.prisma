generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MeasureType {
  WATER
  GAS
}

model Customer {
  id           String    @id @unique @default(uuid())
  customerCode String    @map("customer_code")
  measures     Measure[]

  @@map("customers")
}

model Measure {
  id              String      @id @unique @default(uuid())
  measureDatetime DateTime    @map("measure_datetime")
  measureType     MeasureType @map("measure_type")
  measureValue    Int         @map("measure_value")
  hasConfirmed    Boolean     @map("has_confirmed")
  imageUrl        String      @map("image_url")
  updatedAt       DateTime?   @default(now()) @updatedAt @map("updated_at")
  createdAt       DateTime    @default(now()) @map("created_at")

  customerId String
  Customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId, measureType])
  @@map("measures")
}
